{
  "name": "fervian-component-compiler-extension",
  "displayName": "FCC Support for FFHTML",
  "description": "Adds support for Fervian Component Compiler FFHTML language.",
  "version": "1.1.0",
  "repository": "https://github.com/Margarina-not-butter/fervian-component-compiler-extension",
  "pricing": "Free",
  "publisher": "adrianvictor",
  "icon": "./favicon.png",
  "main": "extension.js",
  "galleryBanner": {"color": "#0000ff"},
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": ["Programming Languages", "Snippets"],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:ffhtml",
    "onCommand:ffhtml.helloWorld"
  ],
  "contributes": {
"languages": [
    {
      "id": "ffhtml",
      "aliases": ["FFHTML", "ffhtml"],
      "extensions": [".ffhtml"],
      "configuration": "./language-configuration.json",
      "extensions": ["html"]
    }
  ],
  "grammars": [
    {
      "language": "ffhtml",
      "scopeName": "text.fervian-formatted-html",
      "path": "./syntaxes/ffhtml.tmLanguage.json"
    }
  ],
  "snippets": [
    {
      "language": "ffhtml",
      "path": "./snippets/ffhtml.json"
    }
  ],
  "viewsContainers": {
    "activitybar": [
      {
        "id": "ffhtml-sidebar",
        "title": "FFHTML",
        "icon": "media/ffhtml-activitybar.svg"
      }
    ]
  },
"views": {
  "explorer": [
    {
      "id": "ffhtmlView",
      "name": "FFCompiler"
    }
  ]
},
"commands": [
    { "command": "ffhtmlView.reload", "title": "Reload FFHTML View" },
    { "command": "ffhtmlView.createResource", "title": "Create Resource File" },
    { "command": "ffhtmlView.createSource", "title": "Create Source File" },
    { "command": "ffhtmlView.createInclude", "title": "Create Include File" },
    { "command": "ffhtmlView.delete", "title": "Delete File/Folder" }
],
"menus": {
    "view/item/context": [
        { "command": "ffhtmlView.createResource", "when": "view == ffhtmlView" },
        { "command": "ffhtmlView.createSource", "when": "view == ffhtmlView" },
        { "command": "ffhtmlView.createInclude", "when": "view == ffhtmlView" },
        { "command": "ffhtmlView.delete", "when": "view == ffhtmlView" }
    ]
}
}
}
